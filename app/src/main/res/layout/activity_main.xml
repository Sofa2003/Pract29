<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-16dp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTelefon"></ImageView>

        <ImageButton
            android:id="@+id/btnPhoto"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="-80dp"
            android:layout_marginBottom="599dp"
            android:layout_toStartOf="@+id/btnInternet"
            android:onClick="onClickPhoto"
            android:src="@drawable/camera"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnInternet"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="329dp"
            android:layout_marginBottom="525dp"
            android:onClick="onClickInternet"
            android:src="@drawable/website"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnTelefon"
            android:layout_width="76dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="335dp"
            android:layout_marginBottom="454dp"
            android:onClick="onClickTelefon"
            android:src="@drawable/vector"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnAddress"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="334dp"
            android:layout_marginBottom="382dp"
            android:onClick="onClickAddress"
            android:src="@drawable/address"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnGalerey"
            android:layout_width="66dp"
            android:layout_height="79dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="339dp"
            android:layout_marginBottom="297dp"
            android:onClick="onClickGalerey"
            android:src="@drawable/galerey"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>